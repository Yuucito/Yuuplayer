<?xml version="1.0" encoding="UTF-8"?>
<!--
  VAST 3.0 personalizado
  - Pre-roll y Mid-roll
  - Skip disponible a los 10 segundos
  - Redirección al hacer clic: https://otieu.com/4/9510171
-->

<VAST version="3.0">

  <!-- 🔹 PRE-ROLL -->
  <Ad id="ad-preroll" sequence="1">
    <InLine>
      <AdSystem version="1.0">MiSistemaDeAnuncios</AdSystem>
      <AdTitle>Pre-roll de prueba</AdTitle>
      <Impression><![CDATA[https://example.com/track/impression-preroll]]></Impression>

      <Creatives>
        <Creative>
          <Linear skipoffset="00:00:10"> <!-- ⏩ Saltable después de 10s -->
            <Duration>00:00:15</Duration>

            <TrackingEvents>
              <Tracking event="start"><![CDATA[https://example.com/track/start-preroll]]></Tracking>
              <Tracking event="complete"><![CDATA[https://example.com/track/complete-preroll]]></Tracking>
            </TrackingEvents>

            <VideoClicks>
              <ClickThrough><![CDATA[https://otieu.com/4/9510171]]></ClickThrough>
              <ClickTracking><![CDATA[https://example.com/track/click-preroll]]></ClickTracking>
            </VideoClicks>

            <MediaFiles>
              <MediaFile delivery="progressive" type="video/mp4" width="640" height="360">
                <![CDATA[https://storage.googleapis.com/gtv-videos-bucket/sample/ForBiggerJoyrides.mp4]]>
              </MediaFile>
            </MediaFiles>
          </Linear>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>

  <!-- 🔸 MID-ROLL -->
  <Ad id="ad-midroll" sequence="2">
    <InLine>
      <AdSystem version="1.0">MiSistemaDeAnuncios</AdSystem>
      <AdTitle>Mid-roll de prueba</AdTitle>
      <Impression><![CDATA[https://example.com/track/impression-midroll]]></Impression>

      <Creatives>
        <Creative>
          <Linear skipoffset="00:00:10"> <!-- ⏩ Saltable después de 10s -->
            <Duration>00:00:20</Duration>

            <TrackingEvents>
              <Tracking event="start"><![CDATA[https://example.com/track/start-midroll]]></Tracking>
              <Tracking event="complete"><![CDATA[https://example.com/track/complete-midroll]]></Tracking>
            </TrackingEvents>

            <VideoClicks>
              <ClickThrough><![CDATA[https://otieu.com/4/9510171]]></ClickThrough>
              <ClickTracking><![CDATA[https://example.com/track/click-midroll]]></ClickTracking>
            </VideoClicks>

            <MediaFiles>
              <MediaFile delivery="progressive" type="video/mp4" width="640" height="360">
                <![CDATA[https://www.w3schools.com/html/mov_bbb.mp4]]>
              </MediaFile>
            </MediaFiles>
          </Linear>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>

</VAST>
